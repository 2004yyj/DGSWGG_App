<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DGSWgg_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="splashScreenIconSize">10dp</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/main</item>
        <item name="postSplashScreenTheme">@style/Theme.DGSWgg_App</item>
    </style>

    <style name="Theme.Toolbar.NavigationIcon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="navigationIcon">@drawable/ic_arrow_dark</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="background">@color/black</item>
    </style>

    <style name="Theme.BottomNavigationView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="itemIconTint">@color/color_enabled_selector_night</item>
        <item name="itemTextColor">@color/color_enabled_selector_night</item>
        <item name="itemTextAppearanceActive">@style/Theme.BottomNavigationView.TextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/Theme.BottomNavigationView.TextAppearanceInactive</item>
    </style>

    <style name="Theme.Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:background">@color/color_button_clicked</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.Search.Background" parent="Theme.Button">
        <item name="android:background">@drawable/bg_search_button_night</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableStart">@drawable/ic_search_night</item>
        <item name="android:textColor">@color/disabled</item>
    </style>

    <style name="Theme.Search.EditText" parent="Theme.Search.Background">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/disabled</item>
    </style>
</resources>